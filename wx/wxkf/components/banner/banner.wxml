<view class='banner'>
  <view class='slide'>
    <swiper indicator-dots="true" circular="true"
    autoplay="true" interval="{{3000}}" duration="{{1000}}">
    <block wx:for="{{imgUrls}}" wx:key="{{index}}}">
      <swiper-item>
        <image src="{{item}}"  class="slide-image" bindtap='bannerClick' data-id="{{index}}" />
      </swiper-item>
    </block>
  </swiper>
  </view>
</view>

